{
  "name": "@lox-informatics/armor",
  "version": "0.0.10",
  "description": "A lightweight toolkit for automating developer setup tasks.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "armor": "index.js"
  },
  "scripts": {
    "lint": "tsc --noEmit",
    "updatecheck": "npx npm-check-updates -u",
    "prebuild": "rimraf ./lib",
    "build": "tsc",
    "postbuild": "echo \"TODO: Ensure files are minimized\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lox-informatics/armor.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "armor",
    "setup",
    "bash"
  ],
  "author": "Kevin Wasike",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lox-informatics/armor/issues"
  },
  "homepage": "https://github.com/lox-informatics/armor#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "typesVersions": {
    "*": {
      "lib/run": [
        "./module.d.ts"
      ],
      "lib/ask": [
        "./module.d.ts"
      ]
    }
  },
  "exports": {
    "./lib/run": "./lib/run.js",
    "./lib/ask": "./lib/ask.js"
  }
